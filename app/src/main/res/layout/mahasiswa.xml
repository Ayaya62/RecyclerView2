<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image_mahasiswa"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/haerin"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/nama_mahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Mahasiswa"
        android:layout_toRightOf="@id/image_mahasiswa"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM Mahasiswa"
        android:layout_toRightOf="@id/image_mahasiswa"
        android:layout_below="@id/nama_mahasiswa"
        />
    <TextView
        android:id="@+id/ipk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPK"
        android:layout_below="@id/nim"
        android:layout_toRightOf="@id/image_mahasiswa"
        />
</RelativeLayout>